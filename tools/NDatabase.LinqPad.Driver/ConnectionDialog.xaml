<Window x:Class="NDatabase.LinqPad.Driver.ConnectionDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Title="NDatabase Connection"
             SizeToContent="Height" WindowStartupLocation="CenterScreen"
             Width="336">
    <StackPanel Margin="7">
        <Label Padding="0,0,0,3">Database File Path:</Label>
        <DockPanel LastChildFill="True">
            <Button Name="btnBrowse" DockPanel.Dock="Right" Content="Browse" Margin="5,0,0,0" Padding="8,3" MinWidth="60" TabIndex="1" Click="btnBrowse_Click" />
            <TextBox Text="{Binding DbFilePath}" DockPanel.Dock="Left" />
        </DockPanel>
        

        <CheckBox IsChecked="{Binding Persist}">Remember this connection</CheckBox>

        <DockPanel LastChildFill="False" Margin="0,8,0,0">
            <Button Name="btnCancel" DockPanel.Dock="Right" Content="Cancel" Margin="5,0,0,0" Padding="8,3" MinWidth="60" IsCancel="True" TabIndex="2" />
            <Button Name="btnOK" DockPanel.Dock="Right" Content="OK" Margin="5,0,0,0" Padding="8,3" MinWidth="60" IsDefault="True" TabIndex="1" Click="btnOK_Click" />
        </DockPanel>
    </StackPanel>
</Window>
